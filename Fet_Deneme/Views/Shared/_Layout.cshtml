<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fet_Deneme</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fet_Deneme.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f3f3f3;
        }
        .fet-menubar {
            background: #fff;
            border-bottom: 1px solid #e0e0e0;
            padding: 0 30px;
            height: 38px;
            display: flex;
            align-items: center;
            font-size: 1.05em;
            user-select: none;
        }
        .fet-menubar .fet-menu {
            margin-right: 32px;
            color: #222;
            cursor: pointer;
            font-weight: 500;
        }
        .fet-menubar .fet-menu:hover {
            color: #1976d2;
        }
        .fet-content-nopad {
            padding: 0;
            margin: 0;
            width: 100%;
            min-height: 90vh;
        }
    </style>
</head>
<body>
    <header>
        <div class="fet-menubar">
            <span class="fet-menu">Dosya</span>
            <div class="fet-menu dropdown" style="position:relative;">
                <span class="fet-menu" id="fet-menu-veri" style="margin-right:0;">Veri ▼</span>
                <div id="fet-veri-dropdown" style="display:none; position:absolute; left:0; top:100%; background:#fff; border:1px solid #e0e0e0; min-width:220px; z-index:1000; box-shadow:0 2px 8px rgba(0,0,0,0.07);">
                    <div class="dropdown-item" style="padding:8px 18px; cursor:pointer;" onclick="window.fetImportSubjectsCsv()">Ders adlarını CSV dosyasından al</div>
                    <!-- Diğer veri import seçenekleri buraya eklenebilir -->
                </div>
            </div>
            <span class="fet-menu">İstatistikler</span>
            <span class="fet-menu">Gelişmiş</span>
            <span class="fet-menu">Ders Programı</span>
            <span class="fet-menu">Ayarlar</span>
            <span class="fet-menu">Yardım</span>
        </div>
    </header>
    <div class="fet-content-nopad">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted" style="background:#fff;">
        <div class="container">
            &copy; 2025 - Fet_Deneme - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
    // Menü dropdown açma/kapama
    document.addEventListener('DOMContentLoaded', function() {
        var veriMenu = document.getElementById('fet-menu-veri');
        var dropdown = document.getElementById('fet-veri-dropdown');
        veriMenu.onclick = function(e) {
            e.stopPropagation();
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        };
        document.body.addEventListener('click', function() {
            dropdown.style.display = 'none';
        });
    });
    </script>
</body>
</html>
